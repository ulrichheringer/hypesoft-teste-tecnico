# Hypesoft Environment Configuration
# Copie para .env: cp .env.example .env

# MongoDB
MONGO_CONNECTION_STRING=mongodb://mongodb:27017
MONGO_DATABASE=hypesoft

# Redis
REDIS_CONNECTION_STRING=redis:6379

# Keycloak
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin

# API
ASPNETCORE_ENVIRONMENT=Development
API_PORT=5000

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:5000
NEXT_PUBLIC_KEYCLOAK_URL=http://localhost:8080
NEXT_PUBLIC_KEYCLOAK_REALM=hypesoft
NEXT_PUBLIC_KEYCLOAK_CLIENT_ID=hypesoft-frontend

# Grafana
GF_SECURITY_ADMIN_PASSWORD=admin

# Grafana SMTP (opcional, para alertas por email)
SMTP_HOST=smtp.gmail.com:587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=alerts@hypesoft.com
